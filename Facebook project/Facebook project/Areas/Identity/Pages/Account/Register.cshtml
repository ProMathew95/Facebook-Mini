@page "/Account/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@

            @*<div id="fullnameSec">*@
                <div class="form-group">
                    @*<label asp-for="Input.FirstName"></label>*@
                    <input asp-for="Input.FirstName" placeholder="FirstName" class="d-block" id="firstnameSec">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Input.LastName"></label>*@
                    <input asp-for="Input.LastName" placeholder="LastName" id="lastnameSec" >
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            @* </div> *@
            <div class="form-group">
                @*<label asp-for="Input.Email"></label>*@
                <input asp-for="Input.Email" placeholder="Email or Phone" id="emailSec" >
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Input.Password"></label>*@
                <input asp-for="Input.Password" placeholder="Password" id="passswordSec" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>



            <div class="form-group">
            @*<label asp-for="Input.ConfirmPassword"></label>*@
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="ConfirmPassword" id="confirmpassswordSec"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>


            <div class="form-group">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="Input.Gender"></label>
            <input type="radio" asp-for="Input.Gender" class="form-control" />
            <span asp-validation-for="Input.Gender" class="text-danger"></span>
        </div>*@

        <div class="form-group">
            <label asp-for="Input.Gender"></label>
            <br />
            <label>
                <input type="radio" name="Input.Gender" value="0">
                Female
            </label>
            <label>
                <input type="radio" name="Input.Gender" value="1">
                Male
            </label>
            <span asp-validation-for="Input.Gender" class="text-danger"></span>
        </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <p>Facebook helps you connect and share with the <br>people in your life.</p>
        <img src="~/imgs/Communication.png" />
    </div>


    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
