@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@model Facebook_project.Models.Post
@{
    var claimsIdentity = (ClaimsIdentity)this.User.Identity;
    var claim = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier);
    var userId = claim.Value;

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Posts" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <input type="hidden" asp-for="PublisherId" value="@userId" />
                <div class="form-group">
                    <label class="control-label">New Post</label>
                    <textarea asp-for="Text"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}